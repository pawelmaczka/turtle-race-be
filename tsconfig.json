{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ],
          "models/*": ["./src/models/*"],
          "types/*": ["./src/types/*"],
          "controllers/*": ["./src/controllers/*"],
          "helpers/*": ["./src/helpers/*"],
          "config/*": ["./src/config/*"],
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": ["node_modules", "webpack.*.js"]
}
